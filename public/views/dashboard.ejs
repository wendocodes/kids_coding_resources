<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Welcome, <%= user.username %></h1>
    <h2>Manage Resources</h2>

    <!-- Add Resource Form -->
    <form action="/api/resources" method="POST">
        <input type="text" name="title" placeholder="Title" required>
        <select name="category" required>
            <option value="Beginner">Beginner</option>
            <option value="Intermediate">Intermediate</option>
            <option value="Advanced">Advanced</option>
        </select>
        <input type="url" name="link" placeholder="Link" required>
        <textarea name="description" placeholder="Description" rows="3" required></textarea>
        <button type="submit">Add Resource</button>
    </form>

    <!-- Display Resources Section -->
    <div class="resources">
        <% resources.forEach(resource => { %>
            <div class="resource-card">
                <div class="resource-details">
                    <h2><%= resource.title %></h2>
                    <p><strong>Category:</strong> <%= resource.category %></p>
                    <p><%= resource.description %></p>
                    <div class="resource-actions">
                        <form action="<%= resource.link %>" method="GET" target="_blank" style="display:inline; width: 50%;">
                            <button class="action-button visit-button" type="submit">Visit Resource</button>
                        </form>
                        <form action="/api/resources/<%= resource.id %>?_method=DELETE" method="POST" style="display:inline; width: 50%;">
                            <button class="action-button delete-button" type="submit">Delete</button>
                        </form>                                             
                    </div>
                </div>
            </div>  
        <% }); %>
    </div>

    <!-- Logout Button -->
    <form action="/api/logout" method="POST">
        <button type="submit">Logout</button>
    </form>
</body>
</html>
